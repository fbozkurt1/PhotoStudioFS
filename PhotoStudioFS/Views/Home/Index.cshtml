@model Appointment
@{
    ViewData["Title"] = "Sinem Kobaner";
}

<div class="row">
    <div class="col-md-6 animate-box">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center colorlib-heading animate-box" style="margin-bottom:0;">
                <h2>Bize Yazın</h2>
            </div>
        </div>
        @await Html.PartialAsync("_ContactRequestPartial")


    </div>

    <div class="col-md-6 animate-box">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center colorlib-heading animate-box" style="margin-bottom:0;">
                <h2>Randevu Talep Edin</h2>
            </div>
        </div>
        <form id="formAppointment" asp-action="Create" asp-controller="Appointment" class="contact-form p-4 p-md-5 py-md-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input id="appName" name="Name" type="text" class="form-control" placeholder="Adınız ve Soyadınız" required>
            </div>
            <div class="form-group">
                <input id="appEmail" name="Email" type="email" class="form-control" placeholder="Email Adresiniz" required>
            </div>
            <div class="form-group">
                <input id="appPhone" name="Phone" type="tel" class="form-control" placeholder="Telefon Numaranız" required>
            </div>
            <div class="form-group">
                <select id="appType" name="Type" class="form-control" style="height:50px;" required>
                    <option selected disabled value="0">Çekim Türü Seçiniz</option>
                    @foreach (var shoot in ViewBag.ShootTypes)
                    {
                        <option value="@shoot.Id">@shoot.Name</option>
                    }
                </select>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input name="Date" id="appDate" type="text" class="form-control" placeholder="Randevu Tarihi" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <select name="DateHour" id="appDateHour" class="form-control" style="height:50px;" required>
                            <option value="-1">Randevu Saati</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <textarea name="Message" id="appMessage" cols="30" rows="7" class="form-control" placeholder="Randevu talebiniz hakkında ekstra belirtmek istediğiniz durumlar" required></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Randevu Talep Et" class="btn btn-primary py-3 px-5">
            </div>
        </form>
    </div>

</div>